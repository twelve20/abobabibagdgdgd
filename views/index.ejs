<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PIR-плиты - Утепление саун и бань</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans:wght@400;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
</head>

<body>
    <!-- Шапка -->
    <%- include('partials/header') %>

    <!-- Слайдер с распродажами -->
    <section id="sales-slider" class="sales-slider">
        <div class="swiper sales-slider__swiper">
            <div class="swiper-wrapper">
                <!-- Слайд 1 -->
                <div class="swiper-slide">
                    <img src="/images/sale1.jpg" alt="Распродажа PIR-плит" class="sale-card__image">
                </div>
    
                <!-- Слайд 2 -->
                <div class="swiper-slide">
                    <img src="/images/sale2.jpg" alt="Бесплатная доставка" class="sale-card__image">
                </div>
    
                <!-- Слайд 3 -->
                <div class="swiper-slide">
                    <img src="/images/sale3.jpg" alt="Подарок при заказе" class="sale-card__image">
                </div>
            </div>
        </div>
    </section>

    <!-- Hero-блок с выплывающими карточками -->
    <%- include('partials/hero') %>

    <%- include('partials/mini-catalog') %>

    <!-- Преимущества -->
    <section id="advantages" class="advantages">
        <div class="container">
            <h2 class="section-title">Преимущества наших PIR-плит</h2>
            <div class="advantages__grid">
                <!-- Преимущество 1 -->
                <div class="advantage">
                    <img src="/icons/fire.svg" alt="Огнестойкость" class="advantage__icon">
                    <p class="advantage__text">Огнестойкость</p>
                </div>

                <!-- Преимущество 2 -->
                <div class="advantage">
                    <img src="/icons/leaf.svg" alt="Экологичность" class="advantage__icon">
                    <p class="advantage__text">Экологичность</p>
                </div>

                <!-- Преимущество 3 -->
                <div class="advantage">
                    <img src="/icons/house.svg" alt="Долговечность" class="advantage__icon">
                    <p class="advantage__text">Долговечность 50 лет</p>
                </div>

                <!-- Преимущество 4 -->
                <div class="advantage">
                    <img src="/icons/clock.svg" alt="Легкость монтажа" class="advantage__icon">
                    <p class="advantage__text">Легкость монтажа</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Наши работы -->
    <%- include('partials/cases') %>

    <!-- Призыв к действию -->
    <section id="cta" class="cta">
        <div class="container">
            <h2 class="cta__title">Оставьте заявку — рассчитаем стоимость за 1 час</h2>
            <form class="cta__form">
                <input type="text" placeholder="Имя" required>
                <input type="tel" placeholder="Телефон" required>
                <textarea placeholder="Комментарий"></textarea>
                <button type="submit" class="btn btn--orange">Отправить заявку</button>
            </form>
        </div>
    </section>

    <!-- Модальное окно для покупки -->
    <div id="buyModal" class="modal">
        <div class="modal__content">
            <span class="modal__close" onclick="closeBuyModal()">&times;</span>
            <h2>Оформить заказ</h2>
            <form class="modal__form">
                <input type="text" placeholder="Имя" required>
                <input type="tel" placeholder="Телефон" required>
                <input type="email" placeholder="Email" required>
                <textarea placeholder="Комментарий к заказу"></textarea>
                <button type="submit" class="btn btn--blue">Отправить заказ</button>
            </form>
        </div>
    </div>

    <!-- Футер -->
    <%- include('partials/footer') %>

    <!-- Модальное окно для получения консультации -->
    <div id="consultationModal" class="modal">
        <div class="modal__content">
            <span class="modal__close" onclick="closeConsultationModal()">&times;</span>
            <h2>Получить консультацию</h2>
            <form class="modal__form">
                <input type="text" placeholder="Имя" required>
                <input type="email" placeholder="Email" required>
                <textarea placeholder="Ваш вопрос" rows="4" required></textarea>
                <button type="submit" class="btn btn--blue">Отправить</button>
            </form>
        </div>
    </div>

    <script src="/js/script.js"></script>
    <script src="/js/call-modal.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
</body>

</html>